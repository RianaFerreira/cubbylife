<div class="unit_actions">
  <%= link_to('Add Unit', new_unit_path) %>
  <%= link_to('Find Unit', units_search_path) %>
</div>

<div class="all_units">
  <% if @units.present? %>
    <ul>
      <% @units.each do |unit| %>
        <li><%= link_to(unit.unit_number, unit_path(unit.id)) %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<div class="a_unit">
  <% if @unit.present? %>
    <ul>
      <h2>Unit <%= @unit.unit_number %> Information</h2>
        <li><%= @unit.floor %></li>
        <li><%= @unit.occupants %></li>
        <li><%= @unit.occupancy_date %></li>
    </ul>
      <%= link_to('Edit Unit', edit_unit_path(@unit.id)) %>
      <%= link_to('Delete Unit', unit_path(@unit.id), :method => :delete) %>
  <% end %>
</div>